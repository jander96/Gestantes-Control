<?xml version="1.0" encoding="utf-8"?><!--Propiedad behavior especificada en la vista scrollable -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/backgrond_layout"
    android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/view_animation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            app:lottie_rawRes="@raw/lista_animaton"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            />






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/gestante_item" />

</LinearLayout>



